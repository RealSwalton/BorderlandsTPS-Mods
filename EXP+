set globals ExpScaleByLevelDifference ((LevelDifference=1,HigherLevelEnemyExpScale=1.000000,LowerLevelEnemyExpScale=0.900000),(LevelDifference=2,HigherLevelEnemyExpScale=1.300000,LowerLevelEnemyExpScale=0.800000),(LevelDifference=3,HigherLevelEnemyExpScale=2.000000,LowerLevelEnemyExpScale=0.700000),(LevelDifference=4,HigherLevelEnemyExpScale=3.000000,LowerLevelEnemyExpScale=0.400000),(LevelDifference=5,HigherLevelEnemyExpScale=3.200000,LowerLevelEnemyExpScale=0.300000),(LevelDifference=6,HigherLevelEnemyExpScale=3.500000,LowerLevelEnemyExpScale=0.100000))
